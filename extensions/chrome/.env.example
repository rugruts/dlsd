# ========================================
# DumpSack Wallet - Chrome Extension
# Development Environment
# ========================================

# Environment Configuration
# Set to 'development', 'staging', or 'production'
VITE_ENV=development

# ----------------------------------------
# Supabase Configuration
# ----------------------------------------
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

VITE_SB_URL=https://your-project.supabase.co
VITE_SB_ANON_KEY=your_supabase_anon_key_here

# Auth provider (supabase or firebase)
VITE_AUTH_PROVIDER=supabase

# ----------------------------------------
# Auth Redirects
# ----------------------------------------
# For Chrome extension, use HTTPS callback URL
# Development: http://localhost:3000/auth/callback
# Production: https://dumpsack.xyz/auth/callback

VITE_AUTH_REDIRECT=http://localhost:3000/auth/callback

# ----------------------------------------
# RPC Configuration
# ----------------------------------------
# Gorbagana blockchain RPC endpoints

VITE_GBA_RPC_PRIMARY=https://rpc.gorbagana.wtf/
VITE_GBA_RPC_FALLBACK=

# Transaction settings
VITE_DEFAULT_COMMITMENT=confirmed
VITE_ENABLE_SIMULATION_PREVIEW=true

# ----------------------------------------
# Swap Configuration
# ----------------------------------------

VITE_SWAP_AGGREGATOR_URL=https://swap-api.gorbagana.wtf
VITE_SWAP_API_KEY=

# ----------------------------------------
# On-Ramp Configuration
# ----------------------------------------

VITE_MOONPAY_ENABLED=false
VITE_MOONPAY_API_KEY=

# ----------------------------------------
# Feature Flags
# ----------------------------------------

VITE_ENABLE_SWAP=true
VITE_ENABLE_STAKING=true
VITE_ENABLE_NFT=true
VITE_ENABLE_BACKUP=true
VITE_ENABLE_PANIC_BUNKER=true
VITE_ENABLE_ANALYTICS=false

# ----------------------------------------
# Analytics Configuration
# ----------------------------------------

VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_TRACKING_ID=