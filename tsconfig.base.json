{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@dumpsack/shared-utils": ["packages/shared-utils/index.ts"],
      "@dumpsack/shared-types": ["packages/shared-types/index.ts"],
      "@dumpsack/": ["packages/"]
    },
    "strict": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}