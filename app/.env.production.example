# ========================================
# DumpSack Wallet - Production Environment
# ========================================
# 
# IMPORTANT: This file contains example values for production.
# Copy this file to .env.production and fill in real values.
# NEVER commit .env.production with real keys to version control!
#
# ========================================

# ----------------------------------------
# Supabase Configuration
# ----------------------------------------
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

EXPO_PUBLIC_SB_URL=https://your-project.supabase.co
EXPO_PUBLIC_SB_ANON_KEY=your_supabase_anon_key_here

# Auth provider (supabase or firebase)
EXPO_PUBLIC_AUTH_PROVIDER=supabase

# ----------------------------------------
# Auth Redirects & Deep Links
# ----------------------------------------
# Platform-specific redirect URLs for OAuth PKCE flow:
#
# For iOS: Use custom URL scheme
# EXPO_PUBLIC_AUTH_REDIRECT=dumpsack://auth/callback
#
# For Android/Web: Use HTTPS URL
# EXPO_PUBLIC_AUTH_REDIRECT=https://dumpsack.xyz/auth/callback
#
# For development: Use localhost
# EXPO_PUBLIC_AUTH_REDIRECT=http://localhost:8081/auth/callback

# Production redirect (HTTPS for Android/Web)
EXPO_PUBLIC_AUTH_REDIRECT=https://dumpsack.xyz/auth/callback

# Deep link scheme for iOS
EXPO_PUBLIC_DEEP_LINK_SCHEME=dumpsack

# ----------------------------------------
# RPC Configuration
# ----------------------------------------
# Gorbagana blockchain RPC endpoints

EXPO_PUBLIC_GBA_RPC_PRIMARY=https://rpc.gorbagana.wtf/
EXPO_PUBLIC_GBA_RPC_FALLBACK=https://rpc2.gorbagana.wtf/

# Transaction settings
EXPO_PUBLIC_DEFAULT_COMMITMENT=confirmed
EXPO_PUBLIC_ENABLE_SIMULATION_PREVIEW=true

# ----------------------------------------
# Swap Configuration
# ----------------------------------------
# Swap aggregator settings

EXPO_PUBLIC_SWAP_AGGREGATOR_URL=https://swap-api.gorbagana.wtf
EXPO_PUBLIC_SWAP_API_KEY=your_swap_api_key_here

# ----------------------------------------
# On-Ramp Configuration
# ----------------------------------------
# MoonPay integration

EXPO_PUBLIC_MOONPAY_ENABLED=true
EXPO_PUBLIC_MOONPAY_API_KEY=your_moonpay_api_key_here

# ----------------------------------------
# Feature Flags
# ----------------------------------------
# Enable/disable features

EXPO_PUBLIC_ENABLE_SWAP=true
EXPO_PUBLIC_ENABLE_STAKING=true
EXPO_PUBLIC_ENABLE_NFT=true
EXPO_PUBLIC_ENABLE_BACKUP=true
EXPO_PUBLIC_ENABLE_PANIC_BUNKER=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# ----------------------------------------
# Analytics Configuration
# ----------------------------------------
# Analytics tracking (optional)

EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_ANALYTICS_TRACKING_ID=

# ----------------------------------------
# Environment
# ----------------------------------------
# Set to 'production' for production builds

NODE_ENV=production
EXPO_PUBLIC_ENV=production

